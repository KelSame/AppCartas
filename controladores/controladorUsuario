const Usuario = require('../modelos/usuario');

exports.registrarUsuario = async (req, res) => {
  try {
    const { usuario, correo, contrasena, rol } = req.body;

    if (!usuario || !correo || !contrasena) {
      return res.status(400).json({ error: 'Faltan datos' });
    }

    const existe = await Usuario.findOne({ correo });
    if (existe) {
      return res.status(400).json({ error: 'El correo ya est√° en uso' });
    }

    const nuevoUsuario = new Usuario({
      usuarioId: Math.floor(Math.random() * 1000000),
      usuario: usuario.trim(),
      correo: correo.trim(),
      contrasena: contrasena.trim(),
      rol: rol || 'usuario',
    });

    await nuevoUsuario.save();
    res.status(201).json({ mensaje: 'Registrado correctamente' });
  } catch (error) {
    console.error('‚ùå Error al registrar usuario:', error);
    res.status(500).json({ error: 'Error al registrar usuario' });
  }
};

exports.loginUsuario = async (req, res) => {
  try {
    const identificador = req.body.identificador?.trim();
    const contrasena = req.body.contrasena?.trim();

    if (!identificador || !contrasena) {
      return res.status(400).json({ error: 'Faltan credenciales' });
    }
    console.log('ü™µ CREDENCIALES RECIBIDAS:', { identificador, contrasena });
    const usuario = await Usuario.findOne({
      $or: [
        { usuario: identificador },
        { correo: identificador }
      ],
      contrasena: contrasena
    });

    console.log('üîç Resultado de b√∫squeda:', usuario);

    if (!usuario) {
      return res.status(401).json({ error: 'Credenciales inv√°lidas' });
    }

    res.status(200).json({
      mensaje: 'Inicio de sesi√≥n exitoso',
      usuario: {
        _id: usuario.usuarioId,
        usuario: usuario.usuario,
        correo: usuario.correo,
        rol: usuario.rol
      }
    });

  } catch (error) {
    console.error('‚ùå Error en login:', error);
    res.status(500).json({ error: 'Error al iniciar sesi√≥n' });
  }
};
